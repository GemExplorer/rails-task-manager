<div class="container mt-5">
  <h1 class="mb-4">Task Details</h1>

  <div class="card">
    <div class="card-header">
      Task Title
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @task.title %></h5>
      <p class="card-text">Completed: <%= @task.completed ? 'Yes' : 'No' %></p>
      <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
      <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
      <%= link_to 'Delete', task_path(@task), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
